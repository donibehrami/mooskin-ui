{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "noUnusedLocals": true
  }
}