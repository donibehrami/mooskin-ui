{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true
  }
}